# Backend Environment Variables
# Copy this file to .env and set your values
# DO NOT commit .env to git - it contains sensitive information

# JWT Secret Key (REQUIRED)
# Generate a secure secret with: openssl rand -base64 32
# Minimum 32 characters recommended for production
JWT_SECRET=your-secret-key-here-minimum-32-characters-long

# Database Path (OPTIONAL)
# Default: ./pong.db
# For Docker: /app/data/pong.db
DB_PATH=/app/data/pong.db

# Server Configuration (OPTIONAL)
# Default: 8000
PORT=8000

# Server Host (OPTIONAL)
# Default: 0.0.0.0 (all interfaces)
HOST=0.0.0.0

# Node Environment (OPTIONAL)
# Options: development, production
# Default: production
NODE_ENV=production

# CORS Configuration (OPTIONAL)
# Comma-separated list of allowed origins
# Example: http://localhost:3000,http://localhost:3001
# CORS_ORIGIN=http://localhost:3000

# Allow All CORS Origins (OPTIONAL)
# Set to 'true' to allow all origins (development only)
# Default: false
# CORS_ALLOW_ALL=false
