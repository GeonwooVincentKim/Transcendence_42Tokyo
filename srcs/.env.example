# Environment Variables Template
# Copy this file to .env and fill in the values
# DO NOT commit .env to git - it contains sensitive information

# JWT Secret Key (REQUIRED)
# Generate a strong random secret key for production
# Example: openssl rand -base64 32
JWT_SECRET=your-strong-secret-key-here-change-this-in-production

# Database Path
DB_PATH=/app/data/pong.db

# Node Environment
NODE_ENV=development

# CORS Configuration
# Set to 'true' to allow all origins (development only)
# In production, set to 'false' and use CORS_ORIGIN instead
CORS_ALLOW_ALL=true

# CORS Allowed Origins (comma-separated)
# Only used when CORS_ALLOW_ALL=false
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
